{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "ECS Task Definition for WebSocket Gateway Service - Sentry",
  "Parameters": {
    "ProjectName": {
      "Type": "String",
      "Default": "sentry",
      "Description": "Project name"
    },
    "Environment": {
      "Type": "String",
      "AllowedValues": [
        "dev",
        "staging",
        "prod"
      ],
      "Description": "Deployment environment"
    },
    "ECSClusterStackName": {
      "Type": "String",
      "Description": "ECS Cluster stack name to import outputs"
    },
    "ECRRepositoryUri": {
      "Type": "String",
      "Description": "ECR repository URI for WebSocket service"
    },
    "ImageTag": {
      "Type": "String",
      "Default": "latest",
      "Description": "Docker image tag"
    },
    "ContainerCpu": {
      "Type": "Number",
      "Default": 256,
      "AllowedValues": [
        256,
        512,
        1024,
        2048
      ],
      "Description": "CPU units for the container"
    },
    "ContainerMemory": {
      "Type": "Number",
      "Default": 512,
      "Description": "Memory in MB for the container"
    },
    "ContainerMemoryReservation": {
      "Type": "Number",
      "Default": 256,
      "Description": "Soft memory limit in MB"
    },
    "DesiredCount": {
      "Type": "Number",
      "Default": 1,
      "MinValue": 0,
      "Description": "Desired number of running tasks"
    },
    "AppSecretArn": {
      "Type": "String",
      "Description": "ARN of the Secrets Manager secret containing sensitive variables"
    },
    "BitgetWsUrl": {
      "Type": "String",
      "Default": "wss://wspap.bitget.com/v2/ws/private",
      "Description": "Bitget WebSocket URL"
    },
    "BitgetApiUrl": {
      "Type": "String",
      "Default": "https://api.bitget.com",
      "Description": "Bitget REST API URL"
    },
    "RedisDb": {
      "Type": "Number",
      "Default": 0,
      "Description": "Redis database (0-15)"
    },
    "ContainerPort": {
      "Type": "Number",
      "Default": 8080,
      "Description": "Health check server port"
    },
    "DynamoDBConfigTable": {
      "Type": "String",
      "Default": "oms_config",
      "Description": "DynamoDB config table name (without environment suffix)"
    },
    "DynamoDBTradingTable": {
      "Type": "String",
      "Default": "oms_trading_data",
      "Description": "DynamoDB trading data table name (without environment suffix)"
    },
    "SQSQueueArnPrefix": {
      "Type": "String",
      "Description": "SQS queue ARN prefix (e.g., arn:aws:sqs:us-east-1:123456789)"
    },
    "EnableServiceAutoScaling": {
      "Type": "String",
      "Default": "false",
      "AllowedValues": ["true", "false"],
      "Description": "Enable ECS Service Auto Scaling based on CPU utilization"
    },
    "MinTaskCount": {
      "Type": "Number",
      "Default": 1,
      "MinValue": 1,
      "Description": "Minimum number of tasks for auto scaling"
    },
    "MaxTaskCount": {
      "Type": "Number",
      "Default": 4,
      "MinValue": 1,
      "Description": "Maximum number of tasks for auto scaling"
    },
    "TargetCPUUtilization": {
      "Type": "Number",
      "Default": 70,
      "MinValue": 10,
      "MaxValue": 100,
      "Description": "Target CPU utilization percentage for scaling"
    },
    "ScaleOutCooldown": {
      "Type": "Number",
      "Default": 60,
      "MinValue": 0,
      "Description": "Cooldown period in seconds after scale out"
    },
    "ScaleInCooldown": {
      "Type": "Number",
      "Default": 300,
      "MinValue": 0,
      "Description": "Cooldown period in seconds after scale in"
    }
  },
  "Conditions": {
    "IsProd": {
      "Fn::Equals": [
        {
          "Ref": "Environment"
        },
        "prod"
      ]
    },
    "EnableAutoScaling": {
      "Fn::Equals": [
        {"Ref": "EnableServiceAutoScaling"},
        "true"
      ]
    }
  },
  "Resources": {
    "LogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": {
          "Fn::Sub": "/ecs/${ProjectName}/websocket-service/${Environment}"
        },
        "RetentionInDays": {
          "Fn::If": ["IsProd", 30, 7]
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Sub": "${ProjectName}-websocket-service-logs-${Environment}"}
          },
          {
            "Key": "Environment",
            "Value": {"Ref": "Environment"}
          },
          {
            "Key": "Project",
            "Value": {"Ref": "ProjectName"}
          },
          {
            "Key": "Service",
            "Value": "websocket-service"
          }
        ]
      }
    },
    "TaskRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::Sub": "${ProjectName}-websocket-service-task-role-${Environment}"
        },
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "ecs-tasks.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "DynamoDBAccess",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:BatchGetItem",
                    "dynamodb:GetItem",
                    "dynamodb:Query",
                    "dynamodb:Scan",
                    "dynamodb:DescribeTable"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/${DynamoDBConfigTable}_${Environment}"
                    },
                    {
                      "Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/${DynamoDBConfigTable}_${Environment}/index/*"
                    },
                    {
                      "Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/${DynamoDBTradingTable}_${Environment}"
                    },
                    {
                      "Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/${DynamoDBTradingTable}_${Environment}/index/*"
                    }
                  ]
                }
              ]
            }
          },
          {
            "PolicyName": "SQSSendAccess",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "sqs:SendMessage",
                    "sqs:GetQueueAttributes",
                    "sqs:GetQueueUrl"
                  ],
                  "Resource": {
                    "Fn::Sub": "${SQSQueueArnPrefix}:*-${Environment}*"
                  }
                }
              ]
            }
          },
          {
            "PolicyName": "CloudWatchLogsAccess",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogStream",
                    "logs:PutLogEvents",
                    "logs:DescribeLogStreams"
                  ],
                  "Resource": {
                    "Fn::Sub": "arn:aws:logs:${AWS::Region}:${AWS::AccountId}:log-group:/ecs/${ProjectName}/websocket-service/${Environment}*"
                  }
                }
              ]
            }
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "${ProjectName}-websocket-service-task-role-${Environment}"
            }
          },
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          },
          {
            "Key": "Project",
            "Value": {
              "Ref": "ProjectName"
            }
          },
          {
            "Key": "Service",
            "Value": "websocket"
          }
        ]
      }
    },
    "TaskDefinition": {
      "Type": "AWS::ECS::TaskDefinition",
      "DependsOn": "LogGroup",
      "Properties": {
        "Family": {
          "Fn::Sub": "${ProjectName}-websocket-${Environment}"
        },
        "NetworkMode": "bridge",
        "RequiresCompatibilities": [
          "EC2"
        ],
        "Cpu": {
          "Ref": "ContainerCpu"
        },
        "Memory": {
          "Ref": "ContainerMemory"
        },
        "ExecutionRoleArn": {
          "Fn::ImportValue": {
            "Fn::Sub": "${ECSClusterStackName}-TaskExecutionRoleArn"
          }
        },
        "TaskRoleArn": {
          "Fn::GetAtt": ["TaskRole", "Arn"]
        },
        "ContainerDefinitions": [
          {
            "Name": "websocket-service",
            "Image": {
              "Fn::Sub": "${ECRRepositoryUri}:${ImageTag}"
            },
            "Cpu": {
              "Ref": "ContainerCpu"
            },
            "Memory": {
              "Ref": "ContainerMemory"
            },
            "MemoryReservation": {
              "Ref": "ContainerMemoryReservation"
            },
            "Essential": true,
            "Environment": [
              {
                "Name": "APP_ENVIRONMENT",
                "Value": {
                  "Ref": "Environment"
                }
              },
              {
                "Name": "AWS_REGION",
                "Value": {
                  "Ref": "AWS::Region"
                }
              },
              {
                "Name": "BITGET_WS_URL",
                "Value": {
                  "Ref": "BitgetWsUrl"
                }
              },
              {
                "Name": "BITGET_API_URL",
                "Value": {
                  "Ref": "BitgetApiUrl"
                }
              },
              {
                "Name": "REDIS_DB_PORT",
                "Value": {
                  "Fn::Sub": "${RedisDb}"
                }
              }
            ],
            "Secrets": [
              {
                "Name": "REDIS_HOST",
                "ValueFrom": {
                  "Fn::Sub": "${AppSecretArn}:REDIS_HOST::"
                }
              },
              {
                "Name": "REDIS_PASSWORD",
                "ValueFrom": {
                  "Fn::Sub": "${AppSecretArn}:REDIS_PASSWORD::"
                }
              },
              {
                "Name": "DYNAMODB_TABLE_CONFIG_NAME",
                "ValueFrom": {
                  "Fn::Sub": "${AppSecretArn}:DYNAMODB_CONFIG_TABLE::"
                }
              },
              {
                "Name": "DYNAMODB_TABLE_TRADING_NAME",
                "ValueFrom": {
                  "Fn::Sub": "${AppSecretArn}:DYNAMODB_TRADING_TABLE::"
                }
              },
              {
                "Name": "MASTER_ORDER_QUEUE_URL",
                "ValueFrom": {
                  "Fn::Sub": "${AppSecretArn}:QUEUE_MASTER_ORDER_URL::"
                }
              }
            ],
            "LogConfiguration": {
              "LogDriver": "awslogs",
              "Options": {
                "awslogs-group": {
                  "Ref": "LogGroup"
                },
                "awslogs-region": {
                  "Ref": "AWS::Region"
                },
                "awslogs-stream-prefix": "websocket-service"
              }
            },
            "HealthCheck": {
              "Command": [
                "CMD-SHELL",
                "curl -sf http://localhost:8080/health || exit 1"
              ],
              "Interval": 30,
              "Timeout": 5,
              "Retries": 3,
              "StartPeriod": 30
            },
            "PortMappings": [
              {
                "ContainerPort": {
                  "Ref": "ContainerPort"
                },
                "HostPort": 0,
                "Protocol": "tcp"
              }
            ],
            "StopTimeout": 30,
            "Ulimits": [
              {
                "Name": "nofile",
                "SoftLimit": 65536,
                "HardLimit": 65536
              }
            ]
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "${ProjectName}-websocket-task-${Environment}"
            }
          },
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          },
          {
            "Key": "Project",
            "Value": {
              "Ref": "ProjectName"
            }
          },
          {
            "Key": "WorkloadType",
            "Value": "WebSocket"
          }
        ]
      }
    },
    "Service": {
      "Type": "AWS::ECS::Service",
      "Properties": {
        "ServiceName": {
          "Fn::Sub": "${ProjectName}-websocket-service-${Environment}"
        },
        "Cluster": {
          "Fn::ImportValue": {
            "Fn::Sub": "${ECSClusterStackName}-ClusterName"
          }
        },
        "TaskDefinition": {
          "Ref": "TaskDefinition"
        },
        "DesiredCount": {
          "Ref": "DesiredCount"
        },
        "LaunchType": "EC2",
        "SchedulingStrategy": "REPLICA",
        "DeploymentConfiguration": {
          "MaximumPercent": 200,
          "MinimumHealthyPercent": {
            "Fn::If": [
              "IsProd",
              100,
              50
            ]
          },
          "DeploymentCircuitBreaker": {
            "Enable": true,
            "Rollback": {
              "Fn::If": [
                "IsProd",
                true,
                false
              ]
            }
          }
        },
        "PlacementStrategies": [
          {
            "Type": "spread",
            "Field": "attribute:ecs.availability-zone"
          },
          {
            "Type": "spread",
            "Field": "instanceId"
          }
        ],
        "HealthCheckGracePeriodSeconds": 60,
        "EnableECSManagedTags": true,
        "PropagateTags": "SERVICE",
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "${ProjectName}-websocket-service-${Environment}"
            }
          },
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          },
          {
            "Key": "Project",
            "Value": {
              "Ref": "ProjectName"
            }
          }
        ]
      }
    },
    "ScalableTarget": {
      "Type": "AWS::ApplicationAutoScaling::ScalableTarget",
      "Condition": "EnableAutoScaling",
      "DependsOn": "Service",
      "Properties": {
        "MaxCapacity": {"Ref": "MaxTaskCount"},
        "MinCapacity": {"Ref": "MinTaskCount"},
        "ResourceId": {
          "Fn::Join": [
            "/",
            [
              "service",
              {
                "Fn::ImportValue": {
                  "Fn::Sub": "${ECSClusterStackName}-ClusterName"
                }
              },
              {"Fn::Sub": "${ProjectName}-websocket-service-${Environment}"}
            ]
          ]
        },
        "RoleARN": {
          "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/aws-service-role/ecs.application-autoscaling.amazonaws.com/AWSServiceRoleForApplicationAutoScaling_ECSService"
        },
        "ScalableDimension": "ecs:service:DesiredCount",
        "ServiceNamespace": "ecs"
      }
    },
    "CPUScalingPolicy": {
      "Type": "AWS::ApplicationAutoScaling::ScalingPolicy",
      "Condition": "EnableAutoScaling",
      "Properties": {
        "PolicyName": {"Fn::Sub": "${ProjectName}-websocket-cpu-scaling-${Environment}"},
        "PolicyType": "TargetTrackingScaling",
        "ScalingTargetId": {"Ref": "ScalableTarget"},
        "TargetTrackingScalingPolicyConfiguration": {
          "PredefinedMetricSpecification": {
            "PredefinedMetricType": "ECSServiceAverageCPUUtilization"
          },
          "TargetValue": {"Ref": "TargetCPUUtilization"},
          "ScaleInCooldown": {"Ref": "ScaleInCooldown"},
          "ScaleOutCooldown": {"Ref": "ScaleOutCooldown"}
        }
      }
    }
  },
  "Outputs": {
    "TaskDefinitionArn": {
      "Description": "Task Definition ARN",
      "Value": {
        "Ref": "TaskDefinition"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-TaskDefinitionArn"
        }
      }
    },
    "ServiceName": {
      "Description": "ECS Service Name",
      "Value": {
        "Fn::GetAtt": [
          "Service",
          "Name"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-ServiceName"
        }
      }
    },
    "ServiceArn": {
      "Description": "ECS Service ARN",
      "Value": {
        "Ref": "Service"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-ServiceArn"
        }
      }
    },
    "TaskRoleArn": {
      "Description": "WebSocket Task Role ARN",
      "Value": {
        "Fn::GetAtt": ["TaskRole", "Arn"]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-TaskRoleArn"
        }
      }
    },
    "LogGroupName": {
      "Description": "WebSocket CloudWatch Log Group Name",
      "Value": {
        "Ref": "LogGroup"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-LogGroupName"
        }
      }
    },
    "ScalingPolicyArn": {
      "Condition": "EnableAutoScaling",
      "Description": "Auto Scaling Policy ARN",
      "Value": {
        "Ref": "CPUScalingPolicy"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-ScalingPolicyArn"
        }
      }
    }
  }
}