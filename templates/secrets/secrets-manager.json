{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Secrets Manager for Sentry - Single secret containing all environment variables",
  "Parameters": {
    "ProjectName": {
      "Type": "String",
      "Default": "sentry",
      "Description": "Project name"
    },
    "Environment": {
      "Type": "String",
      "AllowedValues": ["dev", "staging", "prod"],
      "Description": "Deployment environment"
    }
  },
  "Resources": {
    "AppSecret": {
      "Type": "AWS::SecretsManager::Secret",
      "Properties": {
        "Name": {
          "Fn::Sub": "${ProjectName}/${Environment}"
        },
        "Description": {
          "Fn::Sub": "All secrets for ${ProjectName} - ${Environment}"
        },
        "SecretString": "{\"PLACEHOLDER\":\"REPLACE_WITH_ACTUAL_VALUES\"}",
        "Tags": [
          {
            "Key": "Name",
            "Value": { "Fn::Sub": "${ProjectName}-secrets-${Environment}" }
          },
          {
            "Key": "Environment",
            "Value": { "Ref": "Environment" }
          },
          {
            "Key": "Project",
            "Value": { "Ref": "ProjectName" }
          },
          {
            "Key": "ManagedBy",
            "Value": "CloudFormation"
          }
        ]
      },
      "UpdateReplacePolicy": "Retain",
      "DeletionPolicy": "Retain"
    }
  },
  "Outputs": {
    "SecretArn": {
      "Description": "Secret ARN",
      "Value": { "Ref": "AppSecret" },
      "Export": { "Name": { "Fn::Sub": "${AWS::StackName}-SecretArn" } }
    },
    "SecretName": {
      "Description": "Secret full name",
      "Value": { "Fn::Sub": "${ProjectName}/${Environment}" },
      "Export": { "Name": { "Fn::Sub": "${AWS::StackName}-SecretName" } }
    }
  }
}
